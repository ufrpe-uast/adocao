package model;

public class Relatorio {
	private Adocao adocao;
	private Administrador adm;

	public Relatorio(Adocao adocao, Administrador adm) {
		super();
		this.adocao = adocao;
		this.adm = adm;
	}

	public Adocao getAdocao() {
		return adocao;
	}

	public void setAdocao(Adocao adocao) {
		this.adocao = adocao;
	}

	public Administrador getAdm() {
		return adm;
	}

	public void setAdm(Administrador adm) {
		this.adm = adm;
	}
	public String toString() {
		return new String("<html>" +"<table width=300><thead><th>Mês</th> <th>Vendas</th></thead>"+"</p>"+"<p><h4> Informações do Animal" + "</h4></p>" + "<p>ID:" + getAdocao().getAnimal().getId() + "</p>"
				+ "<p>Nome:" + getAdocao().getAnimal().getNome() + "</p>" + "<p>Sexo:" + getAdocao().getAnimal().getSexo() + "</p>"
				+ "<p><h4> Informações do Candidato()" + "</h4></p>" + "<p>CPF:" + getAdocao().getCandidato().getCPF() + "</p>"
				+ "<p>Nome:" + getAdocao().getCandidato().getNome() + "</p>" + "<p>Email:" + getAdocao().getCandidato().getEmail() + "</p>"
				+ "<p>Telefone:" + getAdocao().getCandidato().getTelefone() + "</p>"
				+ "<p><h4> Situação da Adoção()" + "</h4></p>"+"<p>Status:" + getAdocao().getStatus()+ "</p>"
				+"<p>Definida por:" + getAdm().getNome() + "</p>"
				+ "_______________________________________________________________________" + "</p>" + "</html>");
	}
}
